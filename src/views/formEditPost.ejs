<%- include('partials/header') %>

    <div class="card border-primary mb-3" style="max-width: 18rem;">
        <div class="card-header">Edit Post</div>
        <div class="card-body text-primary">
            <% if(post[0]){ %>
                <form action="/posts/update" method="post">
                    <input type="hidden" id="id" name="id" value="<%= post[0].id %>">
                    <div class="form-group">
                        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= post[0].title %>">
                    </div>
                    <div class="form-group">
                        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= post[0].description %>">
                    </div>
                    <div class="form-group">
                        <input type="text" id="image_url" name="image_url" placeholder="Image" class="form-control" value="<%= post[0].image_url %>">
                    </div>

                    <button type="submit" class="btn btn-outline-primary mt-5">Edit</button>
                </form>
            <% } %>
        </div>
    </div>
    

<%- include('partials/footer') %>