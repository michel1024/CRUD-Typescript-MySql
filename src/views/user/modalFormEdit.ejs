<div class="modal-form">
    <div class="container">
      <div class="card border-primary mb-3 text-center" style="width: 500px;">
        <div class="card-header">Edit Post</div>
        <div class="card-body text-primary">
            <% if(data[0]){ %>
                <form action="/users/update" method="post">
                    <input type="hidden" id="id" name="id" value="<%= data[0].id %>">
                    <div class="form-group">
                        <input type="text" id="name" name="name" value="<%= data[0].name %>" placeholder="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" id="user" name="user" value="<%= data[0].user %>" placeholder="User Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" value="<%= data[0].email %>" placeholder="Email" class="form-control">
                    </div>
                    <div class="form-group">
                      <input type="password" id="password" name="password" value="<%= data[0].password %>" placeholder="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" id="role" name="role" value="<%= data[0].role %>" placeholder="Role" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-outline-primary mt-5">Edit</button>
                    <a href="/users" class="btn btn-primary mt-5">Cancel</a>
                </form>
            <% } %>
        </div>
      </div>
    </div>
  </div>  