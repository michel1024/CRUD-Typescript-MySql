<div class="modal-form">
  <div class="container">
    <div class="card border-primary mb-3 text-center" style="width: 500px;">
      <div class="card-header">New User</div>
      <div class="card-body text-primary">
          <form action="/users/create" method="post">
              <div class="form-group">
                  <input type="text" id="name" name="name" placeholder="Name" class="form-control">
              </div>
              <div class="form-group">
                  <input type="text" id="user" name="user" placeholder="User Name" class="form-control">
              </div>
              <div class="form-group">
                  <input type="email" id="email" name="email" placeholder="Email" class="form-control">
              </div>
              <div class="form-group">
                <input type="password" id="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" id="role" name="role" placeholder="Role" class="form-control">
          </div>

              <button type="submit" class="btn btn-outline-primary mt-5">Save</button>
              <a href="/users" class="btn btn-primary mt-5">Cancel</a>
          </form>
      </div>
    </div>
  </div>
</div>  