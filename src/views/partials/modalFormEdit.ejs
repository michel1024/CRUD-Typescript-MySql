<div class="modal-form">
    <div class="container">
      <div class="card border-primary mb-3 text-center" style="width: 500px;">
        <div class="card-header">Edit Post</div>
        <div class="card-body text-primary">
            <% if(data[0]){ %>
                <form action="/posts/update" method="post">
                    <input type="hidden" id="id" name="id" value="<%= data[0].id %>">
                    <div class="form-group">
                        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= data[0].title %>">
                    </div>
                    <div class="form-group">
                        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= data[0].description %>">
                    </div>
                    <div class="form-group">
                        <input type="text" id="image_url" name="image_url" placeholder="Image" class="form-control" value="<%= data[0].image_url %>">
                    </div>

                    <button type="submit" class="btn btn-outline-primary mt-5">Edit</button>
                    <a href="/posts" class="btn btn-primary mt-5">Cancel</a>
                </form>
            <% } %>
        </div>
      </div>
    </div>
  </div>  